---
export interface Props {
	title: string;
	slug: string;
}

const { title, slug } = Astro.props as Props;

import SlugTest from '../components/SlugTest.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<nav>
			<SlugTest slug={slug} />
		</nav>
		<main>
			<slot />
		</main>
	</body>
</html>
<style lang="scss">
	html {
		font-size: 62.5%;
	}

	body {
		overflow-y: auto;
		overflow-x: hidden;
	}

	*:focus {
		outline: unset!important;
	}
</style>