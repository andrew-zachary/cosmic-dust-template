---
import LangPicker from "../components/layout/LangPicker.astro";

const {lang} = Astro.params;

const paths = {
    'en': [
        {'id': "1", 'name': 'home', 'slug': ''},
        {'id': "2", 'name': 'articles', 'slug': 'articles'},
        {'id': "3", 'name': 'test page', 'slug': 'test-page'}
    ],
    'ar': [
        {'id': "1", 'name': 'إبدأ', 'slug': ''},
        {'id': "2", 'name': 'مقالات', 'slug': 'articles'},
        {'id': "3", 'name': 'صفحة إختبار', 'slug': 'test-page'}
    ]
}

let currentPathId = null;
paths[lang].forEach(path => {
    if(Astro.url.pathname.includes(path.slug)) {
        currentPathId = path.id;
    }
});
---
<nav>
    <ul>
        {
            paths[lang].map(path => {
                return <li>
                    <a 
                        class:list={[
                            'mb-montserrat', 
                            {'current': path.id === currentPathId}
                        ]}
                        href={`/${lang}/${path.slug}`}>
                        {path.name}
                    </a>
                </li>
            })
        }
    </ul>
    <LangPicker />
</nav>
<style is:global lang="scss">
    @use '../styles/mixins.scss' as *;
    
    nav {
        align-self: end;
        margin-bottom: 4rem;
        display: flex;
        align-items: center;

        ul {
            li {
                display: inline-block;
                margin: 0 0.8rem;

                a {
                    font-size: 2rem;
                    font-weight: 300;
                    text-transform: capitalize;
                    color: black;

                    &.current {
                        font-weight: 500;
                        border-bottom: 0.2rem black solid;
                        padding-bottom: 0.5rem;
                    }
                }
            }
        }

        #lang-picker {
            min-width: 8rem;
            position: relative;
            border: 0.1rem solid black;
            border-radius: 2.5rem;
            padding: 0.1rem 1rem;
            @include withRtl('margin', 0 0 0 5rem, 0 5rem 0 0);

            #box-ctrls {
                width: 100%;
                display: flex;
                align-items: center;
                cursor: pointer;

                #picked {
                    width: 100%;
                    font-size: 2rem;
                    font-weight: 500;
                    text-transform: capitalize;

                    [lang='ar'] & {
                        line-height: 2.2rem;
    		            height: 1.8rem;
                    }
                }

                img {
                    width: 1.25rem;
                }
            }

            #box-list {
                position: absolute;
                padding-top: 0.5rem;

                li {
                    display: block;
                    font-weight: 300;
                }
            }

        }
    }
</style>